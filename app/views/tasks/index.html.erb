<h1>Listing tasks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Programmer</th>
      <th>Project</th>
      <th>Priority</th>
      <th>Notes</th>
      <th>Budget</th>
      <th>Start date</th>
      <th>Due date</th>
      <th>Progress</th>
      <th>Status</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.programmer %></td>
        <td><%= task.project ? task.project.name : '*pending' %></td>
        <td><%= task.priority %></td>
        <td><%= task.notes %></td>
        <td><%= task.budget %></td>
        <td><%= task.start_date %></td>
        <td><%= task.due_date %></td>
        <td><%= task.progress %></td>
        <td><%= task.status %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

