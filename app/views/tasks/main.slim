h1 Listing tasks

p = link_to 'Projects', projects_path

table class='table'
  thead
    tr
      th Created at
      th Project
      th Name
      th Programmer
      th Kind
      th Priority
      th Notes
      th Budget
      th Start date
      th Due date
      th Status

  tbody
    - @tasks.each do |task|
      tr
        td = task.created_at
        td = task.project_name
        td = task.name
        td = task.programmer
        td = task.kind
        td = task.priority
        td = !task.notes.empty? ? "#{task.notes[0..30].rstrip}..." : ''
        td = task.budget
        td = task.start_date
        td = task.due_date
        td = task.status
